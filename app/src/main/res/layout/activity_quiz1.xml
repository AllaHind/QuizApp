<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity">








    <Button
        android:id="@+id/prof_back_btn"
        android:layout_width="40dp"
        android:layout_height="37dp"
        android:layout_gravity="end"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_arrow_back" />


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
android:src="@drawable/q1"
                    android:id="@+id/imageQuizz"
                    android:layout_marginBottom="50px"
                    android:layout_marginTop="200px">
                </ImageView>
                <TextView

                    android:id="@+id/question_view"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="310dp"
                    android:padding="20dp"
                    android:text="question"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"

                     />
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="400sp">
                    <RadioButton
                       android:id="@+id/op1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textSize="20dp"
                        ></RadioButton>
                    <RadioButton
                        android:id="@+id/op2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textSize="20dp"></RadioButton>

                </RadioGroup>
                <TextView
                    android:id="@+id/no_of_questions_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"

                    android:gravity="center"
                    android:text="@string/question_number_countdown"
                    android:textColor="@color/rad_rectangle_color"
                    android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="540dp"
            android:layout_marginEnd="10dp"
            android:alpha="0.7"
            android:background="@drawable/main_btn"

            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />


    </LinearLayout>

            </RelativeLayout>




